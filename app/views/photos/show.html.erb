<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
  <div class="inline-block p-1">
      <span class="mr-1"><%= image_tag (@photo.user.profile_picture), class:"rounded-full w-6 h-6 float-left mr-2" %> <%= @photo.user.username %></span>
  </div>
  <%= image_tag @photo.image, class:"w-full" %>
  <div class="px-6 py-4">
    <p class="text-black-100 text-base">
      <%= @photo.description %>
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Like</span>
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Leave comment</span>
  </div>
</div>
